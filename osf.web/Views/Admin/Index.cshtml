@model osf.web.Data.LatestEvent

@section head
{
    <link href="@Url.Content("~/Content/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css"/>

    <style>
        h2 { font-size:26px; margin:20px 0; padding-bottom:10px; }
        h3 {padding-bottom:10px;margin-bottom:10px; }
        .itemList label {width:150px; }
        .itemList span { width:84%; }
    </style>
}

<h2>Latest Events</h2>
    
<form method="POST" enctype="multipart/form-data">
    
    <div id="addEvent" class="fullBorder padded">
        <h3 class="bottomBorder">Add Event</h3>

        <ul class="itemList">
            <li>
                <label>Image</label>
                <span class="inlineBlock">
                    @Html.ValidationMessage("image")
                    <input type="file" name="image"/>
                </span>
            </li>
            <li>
                <label>Date</label>
                @Html.TextBoxFor(m => m.Date, new {id = "date"})
                @Html.ValidationMessageFor(m => m.Date)
            </li>
            <li>
                <label>Title</label>
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title)
            </li>
            <li>
                <label>Description</label>
                <span class="inlineBlock">
                    @Html.ValidationMessageFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description)
                </span>
            </li>
            <li>
                <label></label>
                <input type="submit" value="Add Event" class="button" />
            </li>
        </ul>
    </div>

</form>

@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui.js")"></script>
    
    <script type="text/javascript">
        $(function () {
            $('#date').datepicker({dateFormat: 'dd/mm/yy'})
        })
    </script>
}
