@model osf.web.Data.LatestEvent

@section head
{
    <link href="@Url.Content("~/Content/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css"/>

    <style>
        h2 { font-size:26px; margin:20px 0; padding-bottom:10px; }
        h3 {padding-bottom:10px;margin-bottom:10px; }
        form {margin-bottom:40px;}
        .itemList label {width:150px; }
        .itemList span { width:84%; }
        
        div#paging {text-align:center;font-size:14px;}
        div#paging a {text-decoration:underline;color:#666;margin:0 10px;}
        div#paging span {color:#ddd;margin:0 10px;}
        
        ul#events {margin-top:40px;}
        ul#events li {margin-bottom:20px;}
        ul#events img {width:200px;}
        ul#events span {vertical-align:top;margin-left:20px;font-size:14px;}
        ul#events h3 a {font-size:14px;margin-left:10px;}
    </style>
}

<h2>Latest Events</h2>
    
<form method="POST" enctype="multipart/form-data">
    
    <div id="addEvent" class="fullBorder padded">
        <h3 class="bottomBorder">Add Event</h3>

        <ul class="itemList">
            <li>
                <label>Image</label>
                <span class="inlineBlock">
                    @Html.ValidationMessage("image")
                    <input type="file" name="image"/>
                </span>
            </li>
            <li>
                <label>Date</label>
                @Html.TextBoxFor(m => m.Date, new {id = "date"})
                @Html.ValidationMessageFor(m => m.Date)
            </li>
            <li>
                <label>Title</label>
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title)
            </li>
            <li>
                <label>Description</label>
                <span class="inlineBlock">
                    @Html.ValidationMessageFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description)
                </span>
            </li>
            <li>
                <label></label>
                <input type="submit" value="Add Event" class="button" />
            </li>
        </ul>
    </div>

</form>

<h3 class="bottomBorder">All Events</h3>

@Html.Action("PagedEvents", new { page = ViewBag.Page })

@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui.js")"></script>
    
    <script type="text/javascript">
        $(function () {
            $('#date').datepicker({dateFormat: 'dd/mm/yy'})
        })
    </script>
}
